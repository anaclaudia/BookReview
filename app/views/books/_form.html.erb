<%= form_for(@book, class: "form-horizontal") do |f| %>
	<%= render 'layouts/errors', obj: @book %>

	<div class="form-group col-sm-8 col-sm-offset-2">
		<%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>
	</div>

	<div class="form-group col-sm-8 col-sm-offset-2">
		<%= f.text_field :title, placeholder: "Book's title", class: "form-control" %>
	</div>

	<div class="form-group col-sm-8 col-sm-offset-2">
		<%= f.text_area :description, placeholder: "Book's description", rows: "5", class: "form-control" %>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit yield(:button_text), class: "btn btn-success" %>
			<%= link_to "Cancel", root_path, class: "btn btn-danger" %>
		</div>
	</div>
<% end %>
