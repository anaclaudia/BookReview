<div class="form-horizontal">
	<%= form_for ([@book, @book.reviews.build]) do |f| %>
		
		<div class="form-group">
			<%= f.label :rating %>
			
			<div id="rating">
				<%= f.text_field :rating, class: "form-control" %></div>
			</div>

		<div class= "form-group">
			<%= f.text_area :comment, placeholder: "Insert here your comment about this book", rows: 10, class: "form-control" %>
			<%= f.hidden_field :user_id, :value => current_user.id %>
		</div>
		
		<div class="form-group">
			<%= f.submit "Save", class: "btn btn-success" %>
		</div>

	<% end %>
</div>
